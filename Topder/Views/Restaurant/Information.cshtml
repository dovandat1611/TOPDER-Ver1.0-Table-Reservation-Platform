@model Restaurant

@{
    ViewData["Title"] = "Thông Tin | Topder";
    Layout = "AdminLayout";
}

        <div class="container-scroller">
                <partial name="/Views/Shared/HeaderRestaurant.cshtml"/>

                <partial name="/Views/Shared/LeftPageRestaurant.cshtml"/>
                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">Thông tin về nhà hàng</h4>
                                        </div>
                                        <div>
                                            <a href="/restaurant/information/edit?id=@Model.ResId" class="btn btn-primary text-white me-0">Chỉnh Sửa Thông Tin</a>
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable">
                                            <thead>
                                                <tr>
                                                    <th>Tên Nhà Hàng</th>
                                                    <th>Tên Chủ Nhà Hàng</th>
                                                    <th>Hình Ảnh Chính</th>
                                                    <th>Thời Gian Mở Cửa</th>
                                                    <th>Thời Gian Đóng Cửa</th>
                                                    <th>Thành Phố</th>
                                                    <th>Địa Chỉ</th>
                                                    <th>Số Điện Thoại</th> 
                                                    <th>Email</th>
                                                    <th>Xem Nhà Hàng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                        <tr>
                                                            <td>@Model.NameRes</td>
                                                            <td>@Model.NameOwner</td>
                                                            <td><img src="@Model.Image"/></td>
                                                            <td>@Model.OpenTime.ToString(@"hh\:mm")</td>
                                                            <td>@Model.CloseTime.ToString(@"hh\:mm")</td>
                                                            <td>@Model.Location</td>
                                                            <td>@Model.Address</td>
                                                            <td>@Model.Phone</td>
                                                            <td>@Model.Email</td>
                                                            <td><div class="badge badge-success"><a href="/customer/restaurant?id=@Model.ResId" target="_blank">Details</a></div></td>
                                                        </tr>   
                                            </tbody>
                                        </table> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
