@model Image

@{
    ViewData["Title"] = "Edit Image | Topder";
    Layout = "AdminLayout";
}


       <div class="container-scroller">
                <partial name="/Views/Shared/HeaderRestaurant.cshtml"/>

                <partial name="/Views/Shared/LeftPageRestaurant.cshtml"/>
                <!-- partial -->
                <div class="main-panel">        
                    <div class="content-wrapper">
                        <div class="row">

                            <div class="col-md-6 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Sửa Hình Ảnh</h4>
                                        <form class="forms-sample" method="post" asp-action="EditImage" enctype="multipart/form-data">
                                            <input type="hidden" name="id" value="@Model.ImageId"/>
                                            <div class="form-group">
                                                    <label for="img">Ảnh</label>
                                                    <img id="preview-img" src="@Model.ImageUrl" alt="logo" style="width: 30%">
                                                    <input type="file" name="fileUpload" class="form-control" 
                                                    id="img" onchange="previewImage()" accept="image/*" required>
                                            </div>
                                            <button type="submit" name="submit" class="btn btn-primary me-2">Submit</button>
                                            <button class="btn btn-light">Cancel</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="d-sm-flex justify-content-center justify-content-sm-between">
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2024 Topder. All rights reserved.</span>
                        </div>
                    </footer>
                </div>
            </div>