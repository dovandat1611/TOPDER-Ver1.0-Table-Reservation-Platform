@model Restaurant

@{
    ViewData["Title"] = "Description | Topder";
    Layout = "AdminLayout";
}

        <div class="container-scroller">
        <partial name="/Views/Shared/HeaderRestaurant.cshtml"/>
        <partial name="/Views/Shared/LeftPageRestaurant.cshtml"/>
                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">Mô Tả Nhà Hàng</h4>
                                        </div>

                                        <div>
                                            <a href="/restaurant/description/edit" class="btn btn-primary text-white me-0">Sửa Mô Tả</a>
                                        </div>

                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable">
                                                    <thead>
                                                        <tr>
                                                            <th>Loại Mô Tả</th>
                                                            <th>Nội Dung</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                                        <tr>
                                                                            <td>Sub-Description</td>
                                                                            <td>@(!string.IsNullOrEmpty(Model.Subdescription)?@Html.Raw(Model.Subdescription):"Đang không có mô tả phụ, hãy thêm mô tả")</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Description</td>
                                                                            <td>@(!string.IsNullOrEmpty(Model.Description)?@Html.Raw(Model.Description):"Đang không có mô tả chính, hãy thêm mô tả")</td>
                                                                        </tr>
                                                    </tbody>
                                                </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
 