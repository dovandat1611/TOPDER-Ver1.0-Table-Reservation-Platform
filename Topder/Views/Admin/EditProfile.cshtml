@model Admin
@{
    ViewData["Title"] = "Edit Profile | Topder";
    Layout = "AdminLayout";
}

       <div class="container-scroller">

                <partial name="/Views/Shared/HeaderAdmin.cshtml"/>

                <partial name="/Views/Shared/LeftPageAdmin.cshtml"/>


                <div class="container" style="margin-top: 50px">
                        <div class="row gutters">
                            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="account-settings">
                                            <div class="user-profile">
                                                <div class="user-avatar">
                                                    <img src="@Model.Image" alt="Admin" style="width: 100px; height: 100px">
                                                </div>
                                                <h5 class="user-name">@Model.Name</h5>
                                                <h6 class="user-email">@Model.Email</h6>
                                            </div>
                                            <div class="about">
                                                <h5>Thông Tin</h5>
                                                <p>Số Điện Thoại: @Model.Phone</p>
                                                <p>Email: @Model.Phone</p> 
                                                <p>Ngày Sinh: @Model.Phone</p>      
                                            </div>
                                            <div class="about">
                                                <a href="/adminsite/profile" class="btn btn-secondary">Thoát Chỉnh Sửa</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">
                                    <div class="card-body">
                                        <form method="post" enctype="multipart/form-data" asp-action="EditProfile">      

                                            <div class="row gutters">
                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                    <h6 class="mb-2 text-primary">Thông Tin Cá Nhân</h6>
                                                    @if(ViewBag.MessError != null){
                                                        <p class="text-danger">ViewBag.MessError</p>
                                                    }
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                    <label for="adname">Name</label>
                                                    <input type="text" class="form-control" name="name" id="adname" value="@Model.Name" placeholder="Name" required>       
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                    <label for="emailadmin">Email</label>
                                                    <input type="email" class="form-control" name="email" id="emailadmin" value="@Model.Email" placeholder="Email" required>
                                                       @if(ViewBag.EmailError != null){
                                                             <p class="text-danger">@ViewBag.EmailError</p>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                    <label for="img">Avatar</label>
                                                    <img id="preview-img" src="@Model.Image" alt="avatar" style="width: 30%">
                                                    <input type="file" name="fileUpload" class="form-control" 
                                                    id="img" onchange="previewImage()" accept="image/*">
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                    <label for="phonenum">Phone</label>
                                                    <input type="number" class="form-control" name="phone" id="phonenum" value="@Model.Phone" placeholder="Phone" required>
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="dobad">Date of birth</label>
                                                    <input type="date" class="form-control" name="dob" id="dobad" value="@Model.Dob.Value.ToString("yyyy-MM-dd")" required>
                                                </div>
                                                </div>
                                                <div class="row gutters">
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                        <div class="text-right" style="margin-top: 30px;">
                                                            <button type="submit" id="submit" name="submit"  class="btn btn-primary">Chỉnh Sửa</button>                                  
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
