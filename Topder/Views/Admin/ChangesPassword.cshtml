@model Admin

@{
    ViewData["Title"] = "Changes Password | Topder";
    Layout = "AdminLayout";
}

        <div class="container-scroller">
                <partial name="/Views/Shared/HeaderAdmin.cshtml"/>

                <partial name="/Views/Shared/LeftPageAdmin.cshtml"/>
                
                <div class="container" style="margin-top: 50px">   
                    <div class="row gutters">                      
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">

                                    <div class="card-body">
                                        <div class="account-settings">
                                            <div class="user-profile">
                                                <div class="user-avatar">
                                                    <img src="@Model.Image" alt="avatar" style="width: 100px; height: 100px">
                                                </div>
                                                <h5 class="user-name">@Model.Name</h5>
                                                <h6 class="user-email">@Model.Email</h6>
                                            </div>
                                            <div class="about">
                                                <a href="/admin/profile/edit" class="btn btn-secondary">Chỉnh Sửa Hồ Sơ</a>
                                            </div>
                                        </div>
                                    </div>

                            </div>
                        </div>
                        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="tabs-listing">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <h6 class="mb-2 text-primary">Đổi Mật Khẩu</h6>
                                        </div>
                                        @if(ViewBag.MessError != null)
                                        {
                                            <p style="text-align: center" class="text-danger">@ViewBag.MessError</p>
                                        }
                                        @if(ViewBag.MessSuccess != null)
                                        {
                                            <p style="text-align: center" class="text-success">@ViewBag.MessSuccess</p>
                                        }
                                        <form method="post" asp-action="ChangesPassword">
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="newpas">Mật khẩu mới *</label>
                                                    <input type="password" name="spass" class="form-control" placeholder="Mật khẩu mới" id="newpas" required>
                                        @if(ViewBag.PasswordError != null)
                                        {
                                            <p style="text-align: center" class="text-danger">@ViewBag.PasswordError</p>
                                        }
                                                </div>
                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="renewpass">Nhập lại mật khẩu mới *</label>
                                                    <input type="password" name="respass"class="form-control" placeholder="Nhập lại mật khẩu mới" id="renewpass" required>
                                        @if(ViewBag.RepasswordError != null)
                                        {
                                            <p style="text-align: center" class="text-danger">@ViewBag.RepasswordError</p>
                                        }
                                                </div>
                                            </div>
                                            <div class="row gutters">
                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                    <div class="text-right" style="margin-top: 30px;">
                                                        <button type="submit" id="submit" name="submit"  class="btn btn-primary">Đổi Mật Khẩu</button>                                  
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
