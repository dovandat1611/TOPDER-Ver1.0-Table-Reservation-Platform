    <style>
label {
    text-transform: none !important;
}
h5{
    text-transform: none !important;
}

.popup {
    position: fixed;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    max-height: 70px;
    overflow-y: hidden;
    width: fit-content;
    display: flex;
    align-items: center;
}

.popup.success {
    background-color: #d4edda;
    color: #155724;
}

.popup.error {
    background-color: #f8d7da;
    color: #721c24;
}

    /* Styles for success popup */
    .success-popup {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 10000;
        width: 500px;
        text-align: center;
    }

    .success-popup .header {
        background-color: #dc3545;
        color: #fff;
        padding: 10px;
        border-radius: 5px 5px 0 0;
        font-size: 18px;
    }

    .success-popup .body {
        padding: 20px;
        font-size: 16px;
    }

    .success-popup .footer {
        text-align: center;
        padding: 10px;
        border-top: 1px solid #ccc;
    }

    .success-popup .footer button {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
